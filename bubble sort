#include <stdio.h>

// Function to perform Bubble Sort in descending order
void bubbleSortDescending(int a[], int n) {
    int i, j, temp;
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (a[j] < a[j + 1]) {  // Swap for descending order
                temp = a[j];
                a[j] = a[j + 1];
                a[j + 1] = temp;
            }
        }
    }
}

// Function to display array elements
void displayArray(int a[], int n) {
    if (n == 0) {
        printf("Array is empty!\n");
        return;
    }

    printf("Array elements:\n");
    for (int i = 0; i < n; i++)
        printf("%d ", a[i]);
    printf("\n");
}

int main() {
    int a[50], n = 0, choice, i;

    while (1) {
        printf("\n---- MENU ----\n");
        printf("1. Enter Array Elements\n");
        printf("2. Display Array\n");
        printf("3. Sort Array in Descending Order (Bubble Sort)\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1:
            printf("Enter number of elements: ");
            scanf("%d", &n);
            printf("Enter array elements:\n");
            for (i = 0; i < n; i++)
                scanf("%d", &a[i]);
            break;

        case 2:
            displayArray(a, n);
            break;

        case 3:
            if (n == 0)
                printf("Please enter array elements first!\n");
            else {
                bubbleSortDescending(a, n);
                printf("Array sorted in descending order successfully.\n");
            }
            break;

        case 4:
            printf("Exiting program.\n");
            return 0;

        default:
            printf("Invalid choice! Try again.\n");
        }
    }
}
