#include <stdio.h>

// Function to perform Insertion Sort in descending order
void insertionSortDescending(int a[], int n) {
    int i, j, key;
    for (i = 1; i < n; i++) {
        key = a[i];
        j = i - 1;

        // Move elements smaller than key to one position ahead
        while (j >= 0 && a[j] < key) {
            a[j + 1] = a[j];
            j = j - 1;
        }
        a[j + 1] = key;
    }
}

// Function to display the array
void displayArray(int a[], int n) {
    int i;
    if (n == 0) {
        printf("Array is empty!\n");
        return;
    }

    printf("Array elements:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", a[i]);
    }
    printf("\n");
}

int main() {
    int a[50], n = 0, choice, i;

    while (1) {
        printf("\n---- MENU ----\n");
        printf("1. Enter Array Elements\n");
        printf("2. Display Array\n");
        printf("3. Sort Array in Descending Order (Insertion Sort)\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1:
            printf("Enter number of elements: ");
            scanf("%d", &n);
            printf("Enter array elements:\n");
            for (i = 0; i < n; i++)
                scanf("%d", &a[i]);
            break;

        case 2:
            displayArray(a, n);
            break;

        case 3:
            if (n == 0)
                printf("Please enter array elements first!\n");
            else {
                insertionSortDescending(a, n);
                printf("Array sorted in descending order successfully.\n");
            }
            break;

        case 4:
            printf("Exiting program.\n");
            return 0;

        default:
            printf("Invalid choice! Try again.\n");
        }
    }
}
